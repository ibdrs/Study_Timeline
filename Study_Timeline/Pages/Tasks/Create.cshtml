@page
@model Study_Timeline.View.Pages.Tasks.CreateModel

<h2>Add Task</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="TaskInputModel.Title" class="form-label"></label>
        <input asp-for="TaskInputModel.Title" class="form-control" />
        <span asp-validation-for="TaskInputModel.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TaskInputModel.Description" class="form-label"></label>
        <textarea asp-for="TaskInputModel.Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="TaskInputModel.StartTime" class="form-label"></label>
        <input asp-for="TaskInputModel.StartTime" class="form-control" type="datetime-local" />
    </div>

    <div class="mb-3">
        <label asp-for="TaskInputModel.EndTime" class="form-label"></label>
        <input asp-for="TaskInputModel.EndTime" class="form-control" type="datetime-local" />
    </div>

    <button class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
